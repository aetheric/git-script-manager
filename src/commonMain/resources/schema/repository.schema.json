{
	"$schema": "http://json-schema.org/draft/2019-09/schema",
	"$id": "https://aetheric.co.nz/schema/gsm/repository",
	"type": "object",
	"required": [
		"alias",
		"source",
		"reference"
	],
	"properties": {

		"alias": {
			"type": "string",
			"description": "The name that this repo is referred to with."
		},

		"source": {
			"type": "string",
			"description": "The git-compatible URI to the scripts repo."
		},

		"reference": {
			"type": "string",
			"description": "The branch/tag reference to pull.",
			"default": "main"
		},

		"scripts": {
			"description": "A list of the scripts identified in this repository.",
			"type": "array",
			"default": [],
			"items": {
				"$ref": "https://aetheric.co.nz/schema/gsm/script"
			}
		}

	}
}
