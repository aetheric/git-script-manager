#!/bin/sh

loc="$( cd "$( dirname "${BASEH_SOURCE[0]}" )" && pwd )"

command="$1"

# arguments now don't include command.
shift 1

case "$command" in

	get)   exit get();;

	on)	   exit on();;

	off)   exit off();;

	purge) exit purge();;

	list)  exit list();;

	*)
		echo "Unknown command $1."
		exit 1
	;;

esac

# git scripts fetch tzrlk/git-extras git-switch
function get {
	echo "Retrieving ${1}@${2} from github..."
	
	#check if already cloned; if so, pull.

	#otherwise
	git clone https://github.com/$1.git $loc/../repos/$1

}

# git scripts activate tzrlk/git-extras git-switch git-switch
function on {
	# symlink script in repo to /bin dir
}

# git scripts deactivate git-switch
function off {
	# remove symlink in /bin
}

# git scripts purge tzrlk/git-extras
function purge {

	# remove repo and all related symlinks

}

# git scripts list
function list {

	# list all repos with their commands and whether they're active.

}

